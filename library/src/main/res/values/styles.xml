<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenAppTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textBlack" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
    <style name="BigTitle" parent="Title">
        <item name="android:textSize">@dimen/_24sdp</item>
    </style>
    <style name="BigTitleAccent" parent="BigTitle">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>
    <style name="TitleAccent" parent="Title">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>
    <style name="BigTitlePrimary" parent="BigTitle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="BigTitleWhite" parent="BigTitlePrimary">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitlePrimary" parent="Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="TitleWhite" parent="Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitleWhiteItalic" parent="TitleWhite">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TitleBlackItalic" parent="Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="SubTitleWhite" parent="SubTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitle1White" parent="SubTitleWhite">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:minWidth">@dimen/_50sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/_22sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <style name="buttonAccent" parent="button">
        <item name="android:background">?attr/colorAccent</item>
    </style>
    <style name="smallButton" parent="button">
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:minWidth">@dimen/_30sdp</item>
        <item name="android:elevation">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="textButtonBlack" parent="textButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textButtonBlackOutLine" parent="button">
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">@dimen/_5sdp</item>
    </style>

</resources>
